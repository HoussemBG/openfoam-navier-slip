FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    left
    {
        type            wedge;
    }
    right
    {
        type            wedge;
    }
    outerWall
    {
        type            navierSlip;
        value           uniform (0 0 0);
        slipLength      uniform 1;
        wallVelocity    uniform (0 0 0);
        
        /*type            partialSlip;
	valueFraction   uniform 0.0022;*/
	
	/*type 		fixedValue;
	value		uniform (0 0 0);*/
    }
    innerWall
    {
	type            rotatingWallVelocity;
        origin          (0 0 0);
        axis            (0 0 1);
        omega           12.566;
    }
    frontAndBack
    {
        type            empty;
    }
}


